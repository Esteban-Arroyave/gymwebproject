@model RegistrarseModel


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@{
    ViewData["Title"] = "Registro";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #2c3e50;
        }

        .bg {
            background-image: url('/css/gym plasher.jpg');
            background-position: center center;
            background-size: cover;
        }

        .dark-form {
            background-color: rgba(33, 37, 41, 0.85);
            color: white;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.05);
        }

            .dark-form label {
                color: #ccc;
            }

            .dark-form input {
                background-color: #2b2b2b;
                color: white;
                border: 1px solid #555;
            }

                .dark-form input::placeholder {
                    color: #aaa;
                }

            .dark-form a {
                color: #4dabf7;
            }

        .btn-custom {
            background-color: #4dabf7;
            border: none;
            color: white;
        }

            .btn-custom:hover {
                background-color: #339ce9;
            }
    </style>
</head>
<body>
    <div class="container mt-5 rounded shadow">
        <div class="row align-items-stretch">
            <div class="col bg d-none d-lg-block col-md-5 col-lg-5 col-xl-6 rounded"></div>
            <div class="col dark-form p-5 rounded-end">
                <h2 class="fw-bold text-center py-4">Crear cuenta</h2>
                <form asp-action="registro" asp-controller="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="nombre" class="form-label">Nombre</label>
                        <input asp-for="nombre" type="text" class="form-control" placeholder="Nombres" />
                        <span asp-validation-for="nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="apellido" class="form-label">Apellidos</label>
                        <input asp-for="apellido" type="text" class="form-control" placeholder="Apellidos" />
                        <span asp-validation-for="apellido" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Tiposexo" class="form-label">Sexo</label>
                        <select asp-for="Tiposexo" class="form-control" asp-items="Html.GetEnumSelectList<Tiposexo>()"></select>
                        <span asp-validation-for="Tiposexo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="correo" class="form-label">Correo electrónico</label>
                        <input asp-for="correo" type="email" class="form-control" placeholder="ejemplo@correo.com" />
                        <span asp-validation-for="correo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="contraseña" class="form-label">Contraseña</label>
                        <input asp-for="contraseña" type="password" class="form-control" placeholder="••••••••" />
                        <span asp-validation-for="contraseña" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Selecciona tu rol</label>
                        <select name="rol" class="form-control" required>
                            <option value="Cliente">Cliente</option>
                            <option value="Administrador">Administrador</option>
                        </select>
                    </div>

                
                    <div class="mb-3 form-check">
                        <input type="checkbox" name="terms" class="form-check-input" />
                        <label class="form-check-label">Acepto los <a href="#">términos y condiciones</a></label>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-custom">Registrarse</button>
                       
                    </div>

                    <div class="text-center">
                        <span>¿Ya tienes cuenta? <a href="#">Inicia sesión</a></span>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
