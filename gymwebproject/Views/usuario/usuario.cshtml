@{
    ViewData["Title"] = "Cuenta de Usuario";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #121212;
            color: #ffffff;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            background-color: #1c1c1e;
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: #a9a9a9;
                font-weight: 500;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    color: #ffffff;
                    background-color: #2a2a2e;
                }

        .content-area {
            padding: 3rem;
            background-color: #181818;
            min-height: 100vh;
        }

        .form-control[readonly] {
            background-color: #2e2e33;
            border: none;
            color: #fff;
        }

        .btn-edit {
            background-color: #2a2a2e;
            border: none;
            color: #ffffff;
        }

            .btn-edit:hover {
                background-color: #3a3a3e;
            }

        .section-title {
            color: #ffffff;
            margin-bottom: 1rem;
        }

        .form-label {
            color: #cccccc;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            
            <div class="col-md-3 sidebar p-4">
                <h5 class="text-white mb-4">Cuenta</h5>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link active" href="#">Configuración</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Cuentas vinculadas</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Preferencias de comunicación</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Contraseña y seguridad</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Historial del CLUF</a></li>

                    <hr class="bg-secondary" />

                    <h6 class="text-white mt-3 mb-2">Pagos y recompensas</h6>
                    <li class="nav-item"><a class="nav-link" href="#">Configuración de pagos</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Suscripciones</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Moneda del juego</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Canjear código</a></li>
                </ul>
            </div>

           
            <div class="col-md-9 content-area">
                <h2 class="section-title">Configuración</h2>

                <div class="mb-4">
                    <label class="form-label">Nombre en pantalla</label>
                    <div class="input-group">
                        <input type="text" class="form-control" value="" readonly>
                        <button class="btn btn-edit" type="button">Editar</button>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label">Correo electrónico</label>
                    <div class="input-group">
                        <input type="text" class="form-control" value="" readonly>
                        <button class="btn btn-edit" type="button">Editar</button>
                    </div>
                </div>

                <h4 class="mt-5 section-title">Datos personales</h4>
                <p class="text-muted">Administra tu nombre e información de contacto. Estos datos son privados y no se mostrarán a otros usuarios.</p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
