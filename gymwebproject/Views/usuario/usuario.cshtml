@{
    ViewData["Title"] = "Cuenta de Usuario";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            color: #1c2533;
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            background-color: #1c2533;
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: #cfd8dc;
                font-weight: 500;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background-color: #2b3445;
                    color: #ffffff;
                }

        .content-area {
            padding: 3rem;
            background-color: #ffffff;
            min-height: 100vh;
        }

        .form-control {
            background-color: #f1f1f1;
            border: 1px solid #ced4da;
            color: #1c2533;
        }

            .form-control:focus {
                border-color: #1c2533;
                box-shadow: 0 0 0 0.2rem rgba(28, 37, 51, 0.25);
            }

        .form-label {
            font-weight: 500;
            color: #1c2533;
        }

        .section-title {
            font-weight: bold;
            color: #1c2533;
        }

        .btn-primary {
            background-color: #1c2533;
            border-color: #1c2533;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #2b3445;
                border-color: #2b3445;
            }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Menú lateral -->
            <div class="col-md-3 sidebar p-4">
                <h5 class="text-white mb-4">Cuenta</h5>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link active" href="#">Configuración</a></li>

                    <hr class="bg-secondary" />

                    <h6 class="text-white mt-3 mb-2">Pagos</h6>
                    <li class="nav-item"><a class="nav-link" href="#">Suscripciones</a></li>
                </ul>
            </div>

            <!-- Área de contenido -->
            <div class="col-md-9 content-area">
                <h2 class="section-title">Información de la cuenta</h2>
                <p class="text-muted">Administra tu nombre, correo e información de contacto. Estos datos son privados.</p>

                <form>

                    <div class="mb-4">
                        <label class="form-label">Correo electrónico</label>
                        <input type="email" class="form-control" value="t***3@gmail.com">
                    </div>


                    <div class="mb-4">
                        <label class="form-label">Contraseña</label>
                        <input type="email" class="form-control" value="***">
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label">Nombre</label>
                            <input type="text" class="form-control" value="Esteban">
                        </div>
                        <div class="col-md-6 mb-4">
                            <label class="form-label">Apellido</label>
                            <input type="text" class="form-control" value="Arroyave">
                        </div>
                        <div class="col-md-6 mb-4">
                            <label class="form-label">Teléfono</label>
                            <input type="text" class="form-control" value="+57 3100000000">
                        </div>
                    </div>

                    <div class="mb-5">
                        <button type="submit" class="btn btn-primary">Guardar cambios</button>
                    </div>

                   

                </form>
                <div class="mb-5">
                    <button class="btn btn-danger">salir</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
