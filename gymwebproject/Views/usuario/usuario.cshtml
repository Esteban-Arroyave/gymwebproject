@model List<gymwebproject.Models.compraPmodel>
@using System.Linq

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">📦 Mis Compras</h2>
        <a asp-controller="Home" asp-action="menu2" class="btn btn-outline-primary rounded-pill px-4 shadow-sm">
            ⬅ Volver al Menú
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm rounded">
            <i class="bi bi-info-circle"></i> No tienes compras registradas.
        </div>
    }
    else
    {
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light text-center">
                            <tr>
                                <th>Nombre</th>
                                <th>Correo</th>
                                <th>Suscripción</th>
                                <th>Precio</th>
                                <th>Fecha de Compra</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td>@item.nombre</td>
                                    <td>@item.correo</td>
                                    <td>
                                        <span class="badge bg-gradient px-3 py-2"
                                              style="background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);">
                                            @item.suscripcion
                                        </span>
                                    </td>
                                    <td class="fw-bold text-success">$ @item.precio</td>
                                    <td>
                                        <i class="bi bi-calendar-check"></i>
                                        @item.FechaCompra.ToString("dd/MM/yyyy")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
