@model gymwebproject.Models.gestionmodel

@{
    decimal precioOro = 0;
    decimal precioPlata = 0;
    decimal precioBronce = 0;

    if (Model != null)
    {
        decimal.TryParse(Model.oro, out precioOro);
        decimal.TryParse(Model.plata, out precioPlata);
        decimal.TryParse(Model.bronce, out precioBronce);
    }
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Planes de Suscripción - GYMSTYLO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <div class="container py-5">
        <h2 class="text-center mb-5">Elige tu plan ideal</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">

            <!-- Plan Bronce -->
            <div class="col">
                <div class="card text-center">
                    <div class="card-body">
                        <h3>🥉 Plan Bronce</h3>
                        <p>Acceso limitado a máquinas y horarios restringidos.</p>
                        <p class="fw-bold">@precioBronce.ToString("C0")</p>
                        <a class="btn btn-outline-dark"
                           >
                            Comprar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Plan Plata -->
            <div class="col">
                <div class="card text-center">
                    <div class="card-body">
                        <h3>🥈 Plan Plata</h3>
                        <p>Acceso completo a máquinas, clases grupales y horarios amplios.</p>
                        <p class="fw-bold">@precioPlata.ToString("C0")</p>
                        <a class="btn btn-outline-secondary"
                           >
                            Comprar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Plan Oro -->
            <div class="col">
                <div class="card text-center">
                    <div class="card-body">
                        <h3>🥇 Plan Oro</h3>
                        <p>Acceso total, entrenador personal y beneficios exclusivos.</p>
                        <p class="fw-bold">@precioOro.ToString("C0")</p>
                        <a class="btn btn-warning"
                           >
                            Comprar
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>
</html>
