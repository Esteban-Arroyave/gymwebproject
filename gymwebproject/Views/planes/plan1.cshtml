@model gymwebproject.Models.gestionmodel

@{
    decimal precioOro = 0;
    decimal precioPlata = 0;
    decimal precioBronce = 0;

    if (Model != null)
    {
        decimal.TryParse(Model.oro, out precioOro);
        decimal.TryParse(Model.plata, out precioPlata);
        decimal.TryParse(Model.bronce, out precioBronce);
    }
}





<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Planes de Suscripción - GYMSTYLO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg" style="background-color: #1c2533;">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-bold text-white" href="#">GYMSTYLO</a>

            <ul class="navbar-nav ms-auto">
                <li class="nav-item me-2">
                    <form asp-action="menu" asp-controller="Home" method="get">
                        <button type="submit" class="btn btn-outline-light">Inicio</button>
                    </form>
                </li>
                <li class="nav-item me-2">
                <form asp-action="Index" asp-controller="Home" method="get">
                    <button type="submit" class="btn btn-outline-light">Iniciar sesión</button>
                </form>
                </li>
               
            </ul>
        </div>
    </nav>

   
    <div class="container py-5">
        <h2 class="text-center mb-5">Elige tu plan ideal</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">


            <!-- Plan Bronce -->

            
            <div class="col">
                <div class="card text-center">
                    <div class="card-body">
                        <h3>🥉 Plan Bronce</h3>
                        <p>Acceso limitado a máquinas y horarios restringidos.</p>
                        <p class="fw-bold">@precioBronce.ToString("C0")</p>

                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">
                            Comprar
                        </a>
                    </div>
                </div>
            </div>

     

            <!-- Plan Plata -->
            <form asp-action="Index" asp-controller="Home" method="post">
            <div class="col">
                <div class="card text-center">
                    <div class="card-body">
                        <h3>🥈 Plan Plata</h3>
                        <p>Acceso completo a máquinas, clases grupales y horarios amplios.</p>
                        <p class="fw-bold">@precioPlata.ToString("C0")</p>
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">
                                Comprar
                            </a>
                    </div>
                </div>
            </div>
            </form>

            <!-- Plan Oro -->
            <form asp-action="Index" asp-controller="Home" method="post">
            <div class="col">
                <div class="card text-center">
                    <div class="card-body">
                        <h3>🥇 Plan Oro</h3>
                        <p>Acceso total, entrenador personal y beneficios exclusivos.</p>
                        <p class="fw-bold">@precioOro.ToString("C0")</p>
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">
                                Comprar
                            </a>
                    </div>
                </div>
            </div>

            </form>

        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

</body>
</html>
