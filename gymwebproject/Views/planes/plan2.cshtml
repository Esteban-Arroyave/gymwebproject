                            </form>
                        </li>
                        <li><hr class="dropdown-divider" /></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Planes -->
    <div class="container py-5">
        <h2 class="text-center mb-5">Elige tu plan ideal</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">

            <!-- Plan Bronce -->
