@model gymwebproject.Models.gestionmodel

@{
    decimal precioOro = 0;
    decimal precioPlata = 0;
    decimal precioBronce = 0;

    if (Model != null)
    {
        decimal.TryParse(Model.oro, out precioOro);
        decimal.TryParse(Model.plata, out precioPlata);
        decimal.TryParse(Model.bronce, out precioBronce);
    }
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Planes de Suscripci칩n - GYMSTYLO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg" style="background-color: #1c2533;">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-bold text-white" href="#">GYMSTYLO</a>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item me-2">
                    <form asp-action="menu2" asp-controller="Home" method="get">
                        <button type="submit" class="btn btn-outline-light">Inicio</button>
                    </form>
                </li>
                <li class="nav-item dropdown me-2">
                    <button class="btn btn-outline-light dropdown-toggle" type="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                        Cuenta
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
