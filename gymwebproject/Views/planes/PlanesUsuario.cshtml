@model List<compraPmodel>

<!DOCTYPE html>
<html>
<head>
    <title>Planes de Usuario</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">

    <div class="container py-5">
        <h2 class="mb-4 text-primary fw-bold">Planes de Usuario</h2>

        <!-- Barra de búsqueda -->
        <div class="mb-3">
            <input type="text" id="buscador" class="form-control" placeholder="Buscar por nombre, correo o estado...">
        </div>

        <!-- Tabla -->
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Nombre</th>
                                <th>Correo</th>
                                <th>Suscripción</th>
                                <th>Precio</th>
                                <th>Método</th>
                                <th>Tarjeta</th>
                                <th>Estado</th>
                                <th>Fecha Compra</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="tabla-compras">
                            @foreach (var item in Model)
                            {
                                <tr id="fila-@item.Id">
                                    <td>@item.nombre</td>
                                    <td>@item.correo</td>
                                    <td>@item.suscripcion</td>
                                    <td>@item.precio.ToString("C")</td>
                                    <td>@item.metodo</td>
                                    <td>@item.tarjeta</td>
                                    <td>
                                        @if (item.estado == "Activo")
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.estado</span>
                                        }
                                    </td>
                                    <td>@item.FechaCompra.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm btn-warning btn-actualizar"
                                                data-bs-toggle="modal"
                                                data-bs-target="#confirmarModal"
                                                data-id="@item.Id"
                                                data-nombre="@item.nombre"
                                                data-correo="@item.correo"
                                                data-suscripcion="@item.suscripcion"
                                                data-precio="@item.precio"
                                                data-metodo="@item.metodo"
                                                data-tarjeta="@item.tarjeta"
                                                data-estado="@item.estado"
                                                data-fecha="@item.FechaCompra.ToString("yyyy-MM-dd")">
                                            <i class="bi bi-arrow-repeat"></i> Actualizar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="confirmarModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <!-- *** AQUÍ: controlador y acción correctos *** -->
                <form id="formActualizar" asp-action="ActualizarEstado" asp-controller="planes" method="post">
                    @* Opcional si usas antiforgery *@
                    @* @Html.AntiForgeryToken() *@

                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">Actualizar Compra</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body row g-3">
                        <input type="hidden" name="Id" id="modal-id" />

                        <div class="col-md-6">
                            <label class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="modal-nombre" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Correo</label>
                            <input type="email" class="form-control" id="modal-correo" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Suscripción</label>
                            <input type="text" class="form-control" id="modal-suscripcion" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Precio</label>
                            <input type="text" class="form-control" id="modal-precio" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Método</label>
                            <input type="text" class="form-control" id="modal-metodo" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Tarjeta</label>
                            <input type="text" class="form-control" id="modal-tarjeta" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Estado</label>
                            <select class="form-select" name="estado" id="modal-estado">
                                <option value="Activo">Activo</option>
                                <option value="Inactivo">Inactivo</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Fecha</label>
                            <input type="date" class="form-control" id="modal-fecha" readonly />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-success">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var modalEl = document.getElementById('confirmarModal');
            var form = document.getElementById('formActualizar');
            var filaId = null;

            // 🔎 Buscador
            document.getElementById("buscador").addEventListener("keyup", function () {
                let filtro = this.value.toLowerCase();
                document.querySelectorAll("#tabla-compras tr").forEach(function (fila) {
                    let texto = fila.innerText.toLowerCase();
                    fila.style.display = texto.includes(filtro) ? "" : "none";
                });
            });

            // Abrir modal con datos
            modalEl.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                filaId = button.getAttribute("data-id"); // Guardamos el ID

                document.getElementById('modal-id').value = filaId;
                document.getElementById('modal-nombre').value = button.getAttribute('data-nombre');
                document.getElementById('modal-correo').value = button.getAttribute('data-correo');
                document.getElementById('modal-suscripcion').value = button.getAttribute('data-suscripcion');
                document.getElementById('modal-precio').value = button.getAttribute('data-precio');
                document.getElementById('modal-metodo').value = button.getAttribute('data-metodo');
                document.getElementById('modal-tarjeta').value = button.getAttribute('data-tarjeta');
                document.getElementById('modal-estado').value = button.getAttribute('data-estado');
                document.getElementById('modal-fecha').value = button.getAttribute('data-fecha');
            });

            // Confirmar actualización (AJAX)
            form.addEventListener("submit", function (e) {
                e.preventDefault();

                const formData = new FormData(form);
                // console.log('POST ->', form.action); // útil para verificar que va a /planes/Actualizar

                fetch(form.action, {
                    method: "POST",
                    body: formData
                })
                .then(r => r.json())
                .then(data => {
                    if (data.success) {
                        const fila = document.getElementById("fila-" + filaId);
                        // Columna 7 = Estado (coincide con tu tabla)
                        fila.querySelector("td:nth-child(7)").innerHTML =
                            formData.get("estado") === "Activo"
                            ? '<span class="badge bg-success">Activo</span>'
                            : `<span class="badge bg-secondary">${formData.get("estado")}</span>`;

                        const modal = bootstrap.Modal.getInstance(modalEl);
                        modal.hide();

                        // Fix: limpiar backdrop y desbloquear scroll
                        document.body.classList.remove('modal-open');
                        document.querySelectorAll('.modal-backdrop').forEach(el => el.remove());

                        // Notificación simple
                        // (si prefieres toast, lo agrego de una)
                        alert("Compra actualizada correctamente ✅");
                    } else {
                        alert("No se pudo actualizar ❌");
                    }
                })
                .catch(err => {
                    console.error(err);
                    alert("Error al actualizar ⚠️");
                });
            });
        });
    </script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</body>
</html>
