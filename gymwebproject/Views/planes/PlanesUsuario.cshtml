@model List<compraPmodel>

<div class="container py-4">
    <h2 class="mb-4 text-primary fw-bold">Compras</h2>

    <!-- Barra de búsqueda -->
    <div class="mb-3">
        <input type="text" id="buscador" class="form-control" placeholder="Buscar por nombre, correo o estado...">
    </div>

    <!-- Tabla de compras -->
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Suscripción</th>
                <th>Precio</th>
                <th>Método</th>
                <th>Estado</th>
                <th>Fecha</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody id="tabla-compras">
            @foreach (var item in Model)
            {
                <tr id="fila-@item.Id">
                    <td>@item.Id</td>
                    <td>@item.nombre</td>
                    <td>@item.correo</td>
                    <td>@item.suscripcion</td>
                    <td>@item.precio</td>
                    <td>@item.metodo</td>
                    <td>
                        @if (item.estado == "Activo")
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@item.estado</span>
                        }
                    </td>
                    <td>@item.FechaCompra.ToString("dd/MM/yyyy")</td>
                    <td>
                        <button type="button" class="btn btn-sm btn-warning"
                                data-bs-toggle="modal"
                                data-bs-target="#confirmarModal"
                                data-id="@item.Id"
                                data-nombre="@item.nombre"
                                data-correo="@item.correo"
                                data-suscripcion="@item.suscripcion"
                                data-precio="@item.precio"
                                data-metodo="@item.metodo"
                                data-tarjeta="@item.tarjeta"
                                data-estado="@item.estado"
                                data-fecha="@item.FechaCompra.ToString("dd/MM/yyyy")">
                            <i class="bi bi-arrow-repeat"></i> Actualizar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="confirmarModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">Actualizar Compra</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="formActualizar" asp-action="ActualizarCompra" asp-controller="Compras">
                <div class="modal-body">
                    <input type="hidden" id="modal-id" name="Id" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Nombre</label>
                            <input type="text" id="modal-nombre" class="form-control" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Correo</label>
                            <input type="text" id="modal-correo" class="form-control" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Suscripción</label>
                            <input type="text" id="modal-suscripcion" class="form-control" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Precio</label>
                            <input type="text" id="modal-precio" class="form-control" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Método</label>
                            <input type="text" id="modal-metodo" class="form-control" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Tarjeta</label>
                            <input type="text" id="modal-tarjeta" class="form-control" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Estado</label>
                            <select id="modal-estado" name="estado" class="form-select">
                                <option value="Pendiente">Pendiente</option>
                                <option value="Activo">Activo</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Fecha</label>
                            <input type="text" id="modal-fecha" class="form-control" readonly />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-warning">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var modalEl = document.getElementById('confirmarModal');
            var form = document.getElementById('formActualizar');
            var filaId = null;

            // Abrir modal con datos
            modalEl.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                filaId = button.getAttribute("data-id");

                document.getElementById('modal-id').value = filaId;
                document.getElementById('modal-nombre').value = button.getAttribute('data-nombre');
                document.getElementById('modal-correo').value = button.getAttribute('data-correo');
                document.getElementById('modal-suscripcion').value = button.getAttribute('data-suscripcion');
                document.getElementById('modal-precio').value = button.getAttribute('data-precio');
                document.getElementById('modal-metodo').value = button.getAttribute('data-metodo');
                document.getElementById('modal-tarjeta').value = button.getAttribute('data-tarjeta');
                document.getElementById('modal-estado').value = button.getAttribute('data-estado');
                document.getElementById('modal-fecha').value = button.getAttribute('data-fecha');
            });

            // Confirmar actualización
            form.addEventListener("submit", function (e) {
                e.preventDefault();

                const formData = new FormData(form);

                fetch(form.action, {
                    method: "POST",
                    body: formData
                })
                .then(r => r.json())
                .then(data => {
                    if (data.success) {
                        const fila = document.getElementById("fila-" + filaId);
                        fila.querySelector("td:nth-child(7)").innerHTML =
                            formData.get("estado") === "Activo"
                            ? '<span class="badge bg-success">Activo</span>'
                            : `<span class="badge bg-secondary">${formData.get("estado")}</span>`;

                        const modal = bootstrap.Modal.getInstance(modalEl);
                        modal.hide();

                        // fix para el fondo opaco
                        document.querySelectorAll('.modal-backdrop').forEach(el => el.remove());

                        alert("Compra actualizada correctamente ✅");
                    } else {
                        alert("No se pudo actualizar ❌");
                    }
                })
                .catch(err => {
                    console.error(err);
                    alert("Error al actualizar");
                });
            });

            // 🔎 Buscador
            document.getElementById("buscador").addEventListener("keyup", function () {
                let filtro = this.value.toLowerCase();
                document.querySelectorAll("#tabla-compras tr").forEach(function (fila) {
                    let texto = fila.innerText.toLowerCase();
                    fila.style.display = texto.includes(filtro) ? "" : "none";
                });
            });
        });
    </script>
}
