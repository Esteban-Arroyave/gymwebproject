@model gestionmodel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .sidebar {
        min-height: 100vh;
        background-color: #1c2533;
        color: white;
        padding: 20px;
    }

        .sidebar .btn {
            width: 100%;
            margin-bottom: 10px;
        }
</style>

<script>
    function mostrarSeccion(seccion) {
        document.getElementById("precios").style.display = (seccion === "precios") ? "block" : "none";
        document.getElementById("datos").style.display = (seccion === "datos") ? "block" : "none";
        document.getElementById("planes").style.display = (seccion === "planes") ? "block" : "none";
    }
</script>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2 sidebar d-flex flex-column">
            <h5 class="mb-4 text-center">Menú</h5>
            <button class="btn btn-outline-light" onclick="mostrarSeccion('precios')">Precios</button>
            <button class="btn btn-outline-light" onclick="mostrarSeccion('datos')">Datos</button>
            <button class="btn btn-outline-light" onclick="mostrarSeccion('planes')">Planes de usuario</button>
            <form asp-action="menu2" asp-controller="Home" method="get" class="m-0 p-0">
                <button type="submit" class="btn btn-outline-light w-100">Inicio</button>
            </form>


           @*  planes usuario boton *@
            <form asp-action="PlanesUsuario" asp-controller="Planes" method="get" class="m-0 p-0">
                <button type="submit" class="btn btn-outline-light w-100">Planes de Usuario</button>
            </form>


        </div>

        <!-- Contenido principal -->
        <div class="col-md-10 mt-5">

            <!-- Sección PRECIOS -->
            <div id="precios">
                <h2 class="text-center mb-4">✨ Gestión de Precios de Suscripciones ✨</h2>
                <form asp-action="ActualizarPrecios" asp-controller="Home" method="post">
                    <div class="row g-4">
                        <!-- Oro -->
                        <div class="col-md-4">
                            <div class="card border-warning shadow">
                                <div class="card-header bg-warning text-white text-center fw-bold">
                                    Plan Oro 🏆
                                </div>
                                <div class="card-body">
                                    <label asp-for="oro" class="form-label">Precio ($)</label>
                                    <input asp-for="oro" step="0.01" class="form-control" name="oro" required />
                                </div>
                            </div>
                        </div>
                        <!-- Plata -->
                        <div class="col-md-4">
                            <div class="card border-secondary shadow">
                                <div class="card-header bg-secondary text-white text-center fw-bold">
                                    Plan Plata 🥈
                                </div>
                                <div class="card-body">
                                    <label asp-for="plata" class="form-label">Precio ($)</label>
                                    <input asp-for="plata" step="0.01" class="form-control" name="plata" required />
                                </div>
                            </div>
                        </div>
                        <!-- Bronce -->
                        <div class="col-md-4">
                            <div class="card shadow border-0">
                                <div class="card-header text-white text-center fw-bold" style="background-color: #cd7f32;">
                                    Plan Bronce 🥉
                                </div>
                                <div class="card-body">
                                    <label asp-for="bronce" class="form-label">Precio ($)</label>
                                    <input asp-for="bronce" step="0.01" class="form-control" name="bronce" required />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary">Actualizar</button>
                    </div>
                </form>
            </div>

            <!-- Sección DATOS -->
            <div id="datos" style="display: none;">
                <h2 class="text-center mb-4">Gestión de Datos</h2>
                <div class="card shadow p-4">
                    <h2>Listado de Usuarios</h2>
                    <p>Haga click en el siguiente enlace para generar el documento</p>
                    <a href="/Pdf/pdfInventario" target="_blank" class="btn btn-primary">Generar PDF</a>
                </div>
                <div class="card shadow p-4">
                    <h2>Listado de Suscripciones</h2>
                    <p>Haga click en el siguiente enlace para generar el documento</p>
                    <a href="/Pdf/pdfsuscripciones" target="_blank" class="btn btn-primary">Generar PDF</a>
                </div>
                <div class="card shadow p-4">
                    <h2>Listado de Pagos</h2>
                    <p>Haga click en el siguiente enlace para generar el documento</p>
                    <a href="/Pdf/pdfregistroC" target="_blank" class="btn btn-primary">Generar PDF</a>
                </div>
            </div>

            <!-- Sección PLANES -->
            <div id="planes" style="display: none;">
                <h2 class="text-center mb-4">📌 Planes de Usuario</h2>
                <div class="card shadow p-4">
                    <p>Aquí irá la gestión y listado de los planes adquiridos por los usuarios (enlazado con tus compras).</p>
                </div>


            </div>
        </div>
    </div>
</div>
