@model login

@{
    ViewData["Title"] = "Home Page";
    Layout = null;

}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <style>
        body {
            background-color: #2c3e50;
        }

        .bg {
            background-image: url('/css/gym plasher.jpg');
            background-position: center center;
            background-size: cover;
        }

        .dark-form {
            background-color: rgba(33, 37, 41, 0.85);
            color: white;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.05);
        }

            .dark-form label {
                color: #ccc;
            }

            .dark-form input {
                background-color: #2b2b2b;
                color: white;
                border: 1px solid #555;
            }

                .dark-form input::placeholder {
                    color: #aaa;
                }

            .dark-form a {
                color: #4dabf7;
            }
    </style>
</head>
<body>
    <div class="container mt-5 rounded shadow">
        <div class="row align-items-stretch">
            <div class="col bg d-none d-lg-block col-md-5 col-lg-5 col-xl-6 rounded"></div>
            <div class="col dark-form p-5 rounded-end">
                <h2 class="fw-bold text-center py-5">Bienvenido</h2>
                <form asp-action="Iniciar" asp-controller="Login">
                    <div class="mb-4">
                        <label for="correo" class="form-label">Correo electrónico</label>
                        <input asp-for="correo" type="correo" class="form-control" name="correo" placeholder="ejemplo@correo.com" />
                    </div>
                    <div class="mb-4">
                        <label for="contraseña" class="form-label">Password</label>
                        <input asp-for="contraseña" type="password" class="form-control" name="contraseña" placeholder="••••••••" />
                    </div>
                    <div class="mb-4 form-check">
                        <label for="connected" class="form-check-label">Mantenerme conectado</label>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                    </div>
                    <div class="my-3">
                        <span>¿No tienes cuenta? <a href="#">Regístrate</a></span><br />
                        <span><a href="#">Recuperar Password</a></span>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
</body>
</html>
