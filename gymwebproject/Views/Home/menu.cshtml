

@{
    ViewData["Title"] = "Home Page";


}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            width: 100%;
            height: 100%;
            overflow-x: hidden;
        }

        .navbar {
            background-color: #1f2a38;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 10;
        }

        .navbar-brand,
        .nav-link,
        .dropdown-item {
            color: #ecf0f1 !important;
        }

        .dropdown-menu {
            background-color: #34495e;
            border: none;
        }

        .dropdown-item:hover {
            background-color: #3d566e;
        }

        .carousel,
        .carousel-inner,
        .carousel-item {
            width: 100%;
            height: 100vh;
        }

        .carousel-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            filter: brightness(0.9);
        }

        .no-padding {
            padding: 0;
            margin: 0;
        }
    </style>
</head>
<body class="no-padding">

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-bold" href="#">GYMSTYLO</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuNav" aria-controls="menuNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="menuNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item me-2">
                        <form asp-action="Plan1" asp-controller="Planes" method="get">
                            <button type="submit" class="btn btn-outline-light">Ofertas</button>
                        </form>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Cuenta
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <form asp-action="Index" asp-controller="Home" method="get" class="dropdown-item m-0 p-0">
                                    <button type="submit" class="dropdown-item">Iniciar sesión</button>
                                </form>
                            </li>
                            <li>
                                <form asp-action="Registro" asp-controller="Login" method="get" class="dropdown-item m-0 p-0">
                                    <button type="submit" class="dropdown-item">Registrarse</button>
                                </form>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- SLIDER FULLSCREEN -->
    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="4000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/css/publi.png" alt="Imagen 1" />
            </div>
            <div class="carousel-item">
                <img src="/css/slider2.png" alt="Imagen 2" />
            </div>
            <div class="carousel-item">
                <img src="/css/slider3.png" alt="Imagen 3" />
            </div>
        </div>

        <!-- Controles -->
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>


    <!-- SECCIÓN DE BIENVENIDA -->
    <section class="py-5 text-center bg-light">
        <div class="container">
            <h1 class="fw-bold">¡Bienvenido a GYMSTYLO!</h1>
            <p class="lead">Un espacio creado para llevarte al siguiente nivel en tu entrenamiento.</p>
            <form asp-action="Plan2" asp-controller="Planes" method="get">
                <button type="submit" class="btn btn-primary mt-3">Ver nuestros planes</button>
            </form>
        </div>
    </section>
    <!-- SECCIÓN DE EXPERIENCIAS MOTIVACIONALES -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-5">EXPERIENCIAS</h2>
            <div class="row g-4">

                <div class="col-md-4">
                    <div class="card h-100 shadow border-0">
                        <img src="/css/gym1.jpg" class="card-img-top" alt="Motivación 1">
                        <div class="card-body text-center">
                            <p class="card-text fst-italic">"Cada día es una nueva oportunidad para superarte."</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 shadow border-0">
                        <img src="/css/gym2.jpg" class="card-img-top" alt="Motivación 2">
                        <div class="card-body text-center">
                            <p class="card-text fst-italic">"El dolor que sientes hoy será tu fuerza mañana."</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 shadow border-0">
                        <img src="/css/girl.jpg" class="card-img-top" alt="Motivación 3">
                        <div class="card-body text-center">
                            <p class="card-text fst-italic">"No se trata de tener tiempo, se trata de hacer tiempo."</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>




  


    <!-- Bootstrap JS para funcionalidad del menú -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

</body>
</html>